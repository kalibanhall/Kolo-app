# ===========================================
# KOLO TOMBOLA - VARIABLES D'ENVIRONNEMENT
# ===========================================

# ===== SERVER =====
NODE_ENV=development
PORT=5000

# ===== DATABASE =====
DATABASE_URL=postgresql://user:password@host:port/database
# Example: postgresql://postgres:password@localhost:5432/kolo_db
# Or Supabase: postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres

# ===== CORS & CLIENT =====
CORS_ORIGIN=http://localhost:5173
CLIENT_URL=http://localhost:5173

# ===== JWT =====
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# ===== SENDGRID EMAIL SERVICE =====
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
FROM_EMAIL=support@kolo.cd
FROM_NAME=KOLO Tombola
ADMIN_EMAIL=admin@kolo.cd

# ===== AFRICA'S TALKING SMS =====
AT_USERNAME=your-africas-talking-username
AT_API_KEY=your-africas-talking-api-key
AT_SENDER_ID=KOLO

# ===== CLOUDINARY IMAGE UPLOADS =====
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===== SUPABASE (Password Reset) =====
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===== FIREBASE (Push Notifications - Optional) =====
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# ===== SENTRY (Error Tracking - Optional) =====
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# ===== MOBILE MONEY PAYMENT PROVIDERS =====

# PayDRC (MOKO Afrika) - Primary Payment Gateway
# API Docs: https://paydrc.gofreshbakery.net/api/v5/
PAYDRC_BASE_URL=https://paydrc.gofreshbakery.net/api/v5/
PAYDRC_MERCHANT_ID=your-paydrc-merchant-id
PAYDRC_MERCHANT_SECRET=your-paydrc-merchant-secret
# Callback encryption key (provided by PayDRC)
PAYDRC_AES_KEY=your-16-or-32-byte-aes-key
# Optional: Custom IV (if not provided, AES_KEY is used as IV per doc)
# PAYDRC_AES_IV=your-custom-iv
# Callback URL (auto-generated if not set)
PAYDRC_CALLBACK_URL=https://your-api.com/api/payments/paydrc/callback

# ===== STATIC IP PROXY (for PayDRC IP whitelisting) =====
# Use ONE of these services to get a fixed outbound IP:
# - QuotaGuard: https://www.quotaguard.com (adds QUOTAGUARD_URL automatically)
# - Fixie: https://usefixie.com (adds FIXIE_URL automatically)
# - Custom proxy: set PROXY_URL manually
# Format: http://user:password@proxy.example.com:9293
# QUOTAGUARD_URL=http://user:pass@proxy.quotaguard.com:9293
# FIXIE_URL=http://user:pass@proxy.usefixie.com:80
# PROXY_URL=http://user:pass@your-proxy.com:8080

# M-Pesa
MPESA_API_KEY=your_mpesa_api_key
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_PASSKEY=your-mpesa-passkey
MPESA_SHORTCODE=your-mpesa-shortcode

# Orange Money
ORANGE_API_KEY=your_orange_api_key
ORANGE_MONEY_API_KEY=your-orange-money-api-key
ORANGE_MONEY_MERCHANT_KEY=your-orange-money-merchant-key

# Airtel Money
AIRTEL_API_KEY=your_airtel_api_key
AIRTEL_MONEY_CLIENT_ID=your-airtel-money-client-id
AIRTEL_MONEY_CLIENT_SECRET=your-airtel-money-client-secret

# ===== APP SETTINGS =====
MAX_TICKETS_PER_PURCHASE=5
TICKET_PRICE=1
MIN_TICKET_PRICE=1
DEFAULT_CAMPAIGN_TICKETS=15200
DEFAULT_CURRENCY=USD
TIMEZONE=Africa/Kinshasa

# ===== SECURITY =====
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100