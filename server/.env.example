# Environment variables
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/kolo_db
# Alternative for development: use SQLite
DATABASE_TYPE=sqlite
SQLITE_PATH=./kolo.db

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# Mobile Money API (Mock for development)
MPESA_API_KEY=your_mpesa_api_key
ORANGE_API_KEY=your_orange_api_key
AIRTEL_API_KEY=your_airtel_api_key

# Email service (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Admin credentials
ADMIN_EMAIL=admin@kolo.com
ADMIN_PASSWORD=secure_admin_password

# Application settings
MAX_TICKETS_PER_PURCHASE=5
TICKET_PRICE=1
DEFAULT_CAMPAIGN_TICKETS=15200